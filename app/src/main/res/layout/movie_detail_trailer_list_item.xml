<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/movie_detail_vertical_padding"
    android:layout_marginBottom="@dimen/movie_detail_vertical_padding"
    >

    <ImageView
        android:id="@+id/iv_playbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_playbutton"
        android:adjustViewBounds="true"
        android:contentDescription="@string/play_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/movie_normal_text_size"
        tools:text="Awesome title"
        app:layout_constraintLeft_toRightOf="@+id/iv_playbutton"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/iv_playbutton"
        app:layout_constraintTop_toTopOf="@+id/iv_playbutton" />

</android.support.constraint.ConstraintLayout>