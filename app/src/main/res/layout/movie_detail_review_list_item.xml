<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/movie_detail_vertical_padding"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/movie_detail_list_image_size"
        android:layout_height="@dimen/movie_detail_list_image_size"
        android:layout_gravity="top"
        android:contentDescription="@string/review_image_description"
        android:background="@drawable/comment" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/movie_normal_text_size"
            tools:text="Awesome title" />

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/movie_small_text_size"
            android:visibility="gone"
            tools:text="CONTENT WHICH HAS SOME AWESOME TEXT" />
    </LinearLayout>

</LinearLayout>