<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/forecast_detail_vertical_padding"
    android:layout_marginBottom="@dimen/forecast_detail_vertical_padding"
    >

    <TextView
        android:id="@+id/tv_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/movie_big_text_size"
        tools:text="Awesome title" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/movie_normal_text_size"
        android:visibility="gone"
        tools:text="CONTENT WHICH HAS SOME AWESOME TEXT" />

</LinearLayout>