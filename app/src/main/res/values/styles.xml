<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style used in the DetailActivity for the labels of the extra weather information -->
    <style name="DetailLabel" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/detail_accent_label</item>
    </style>

    <!-- Style used in the DetailActivity for the values of the extra weather information
    <style name="ExtraWeatherMeasurement" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>-->

    <style name="DetailsHeadline" parent="@style/TextAppearance.AppCompat.Headline" >
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_detail_headerPadding</item>
        <item name="android:layout_marginLeft">@dimen/movie_detail_startMargin</item>
    </style>

    <style name="DetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/movie_normal_text_size</item>
        <item name="android:layout_marginEnd">@dimen/movie_detail_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/movie_detail_horizontal_padding</item>
    </style>

    <style name="SmallSeparator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">@dimen/movie_detail_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/movie_detail_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/movie_details_space</item>
        <item name="android:contentDescription"></item>
    </style>

</resources>